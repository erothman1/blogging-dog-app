{{!-- Show blogposts created by logged in user --}}
{{!-- Have option to add a new blogpost --}}

{{log this}}
{{#if posts.length}}
{{#each posts}}
<a href="/blog/{{id}}">
  <div class="card">
    <div class="card-content">
      <p class="title">
        {{this.title}}, posted on {{formatDate this.createdAt}}
      </p>
    </div>
  </div>
</a>
{{/each}}
{{else}}
<p style="text-align: center">No posts yet.</p>
{{/if}}
<div class="center">
  <button class="button" id="new-post"><i class="fa-solid fa-user-plus"></i>New Blog Post</button>
</div>

<div class="container is-one-third" id="postForm" style="display:none">
  <form>

    <div class="field">
      <label class="label">Title</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input is-normal" type="text">
      </div>
    </div>

    <div class="field">
      <label class="label">Content</label>
      <div class="control has-icons-left has-icons-right">
        <input class="input" type="text">
      </div>
    </div>

  </form>
</div>

<script src="/js/newPost.js"></script>